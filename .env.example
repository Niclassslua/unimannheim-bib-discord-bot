# ===============================
# Discord Bot Configuration
# ===============================

# Discord bot token from https://discord.com/developers/applications
DISCORD_TOKEN=your-bot-token-here

# Target Discord channel where the occupancy messages are posted
TEXT_CHANNEL_ID=123456789012345678

# Discord message IDs for the embeds that will be updated
MESSAGE_A3=123456789012345678
MESSAGE_A5=123456789012345678
MESSAGE_EHRENHOF=123456789012345678
MESSAGE_SCHNECKENHOF=123456789012345678

# ===============================
# Database Configuration (MySQL)
# ===============================

USE_DB=true
DB_HOST=localhost
DB_USER=your-db-username
DB_PASSWORD=your-db-password
DB_DATABASE=your-db-name

# ===============================
# Scraper / Debug Options
# ===============================

# Shared occupancy URL (can be overridden if it changes in the future)
OCCUPANCY_URL=https://www.bib.uni-mannheim.de/standorte/freie-sitzplaetze/

# Enable verbose logging for debugging (true / false)
DEBUG=false
